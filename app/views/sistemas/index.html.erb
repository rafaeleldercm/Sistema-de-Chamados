<div id="main_content">
   <h2 class="grid_12">Sistemas</h2>
   <div class="clear"></div>

   <div role="main" class="container_12" id="content-wrapper">
      <div id="main_content">
         <div style='margin: 15px '>
            <div style='float: left'>
               <%= link_to 'Novo Sistema', new_sistema_path %>
            </div>
            <div style='float: right'>
               <%= will_paginate_custom @sistemas if @sistemas %>
            </div>
        </div>

        <div class="grid_12">
           <div class="box">
              <div class="header">
                  <%= image_tag( "#{$ICO1_PATH}/application-detail.png") %>
                  <h3>Sistemas</h3><span></span>
              </div>
              <div class="content" style='padding: 0'>
                 <table id="table-example" class="table" >
                    <thead>
                       <tr>
                          <th>Descricao</th>
                          <th>Tipos de Chamado</th>
                          <th>Ativo</th>
                          <th colspan='2'> Ações  </th>
                       </tr>
                    </thead>
                 <tbody>
                    <% @sistemas.each do |s| %>
                       <tr class="gradeX">
                          <td>          <%=h s.nome %></td>
                          <td>         [<%=h s.tipo_chamados.all(:order => 'nome').collect { |t| t.nome }.join(',') %>]</td>
                          <td width=40> <%= check_box_tag :ativo, nil, s.ativo, :disabled => true %></td>
                          <td>          <%= link_to image_tag("#{$ICO1_PATH}/edit-signiture.png", :title => 'Editar'), edit_sistema_path(s) %></td>
                          <td>          <%= link_to image_tag("#{$ICO1_PATH}/tables-stacks.png", :title => 'Tipos de Chamado'),
                                                    :action => 'tipo_de_chamado', :id => s.id %></td>
                       </tr>
                    <% end %>
                </tbody>
                </table>
             </div> <!-- End of .content -->
             <div class="clear"></div>
          </div> <!-- End of .box -->
       </div> <!-- End of .grid_12 -->
       <br/>
    </div> <!-- End of #main_content -->
    <div class="clean"></div>
  </div> <!-- End of #content-wrapper -->
</div>
