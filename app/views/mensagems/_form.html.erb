   <% form_for @mensagem do |f| -%>
      <% unless @mensagem.errors.blank? %>
         <div class="grid_12">
             <div class="box">
                <div class="header">
                   <img src="/img/icons/packs/fugue/16x16/cross-circle.png" width="16" height="16">
                   <h3>Não foi possível gravar mensagem.</h3>
                  <span></span>
                </div>
                <div class="content">
                   <div class="alert warning no-margin top" style='margin: 0'>
                      <span class="icon"></span><span class="hide">x</span>Por favor, verifique o(s) seguinte(s) campo(s):
                   </div>
                   <% @mensagem.errors.full_messages.each do |m| %>
                      <div class="alert error" style='margin: 5px; '>
                         <span class="icon"></span><span class="hide">x</span><strong>Error: </strong> <%= m %>
                      </div>
                   <% end %>
                </div> <!-- End of .content -->
             </div> <!-- End of .box -->
          </div>
      <% end %>
      <div class="grid_12">
         <div class="box">
            <div class="header">
               <img width="16" height="16" alt="" src="/img/icons/packs/fugue/16x16/ui-text-field-format.png"/>
               <h3>Mensagem</h3> <span/>
            </div>
            <%= hidden_field_tag 'mensagem[chamado_id]', @mensagem.chamado_id %>
            <div class="content with_actions">
               <div class="section _50">
                  <p style='margin: 10px'>
                     <%= label_tag 'Mensagem' %><br/>
                     <%= f.text_area :descricao, :style=> ' height: 200px' %>
                  </p>
               </div>
               <div class="section _50">
                  <%= label_tag 'Status' %>
                  <div>
                     <%= f.select :chamado_status, @chamado_status , :readonly => true %>
                  </div>
               </div>
               <div class="section _50">
                  <%= label_tag 'Usuário' %>
                  <div>
                     <%= text_field_tag :nome, @current_usuario.name, :readonly => true %>
                  </div>
               </div>
               <div class="section _50">
                  <%= label_tag 'Enviada' %>
                  <div>
                     <%= text_field_tag :enviada_em, Time.now.to_s_br, :readonly => true %>
                  </div>
               </div>

            </div>
            <div class="actions">
               <div class="actions-right">
                  <%= submit_tag "Confirmar" %>
               </div>
            </div>
         </div>
      </div>
   <% end -%>

