   <% form_for @usuario do |f| -%>
      <% unless @usuario.errors.blank? %>
         <div class="grid_12">
             <div class="box">
                <div class="header">
                   <img src="/img/icons/packs/fugue/16x16/cross-circle.png" width="16" height="16">
                   <h3>Não foi possível gravar usuário.</h3>
                  <span></span>
                </div>
                <div class="content">
                   <div class="alert warning no-margin top" style='margin: 0'>
                      <span class="icon"></span><span class="hide">x</span>Por favor, verifique o(s) seguinte(s) campo(s):
                   </div>
                   <% @usuario.errors.full_messages.each do |m| %>
                      <div class="alert error" style='margin: 5px; '>
                         <span class="icon"></span><span class="hide">x</span><strong>Error: </strong> <%= m %>
                      </div>
                   <% end %>
                </div> <!-- End of .content -->
             </div> <!-- End of .box -->
          </div>
      <% end %>

      <% is_new = (['new','create'].include? action_name) %>
      <div class="grid_6">
         <div class="box">
            <div class="header">
               <img width="16" height="16" alt="" src="/img/icons/packs/fugue/16x16/ui-text-field-format.png"/>
               <h3>Dados do Usuário</h3> <span/>
            </div>
            <div class="content with_actions">
               <div class="section _100">
                  <%= label_tag 'nome' %>
                  <div>
                      <%= f.text_field :name , :readonly => !is_new %>
                  </div>
               </div>
               <div class="section _100">
                  <%= label_tag 'login' %>
                  <div>
                      <%= f.text_field :login, :readonly => !is_new %>
                  </div>
               </div>
               <div class="section _100">
                  <%= label_tag 'email' %>
                  <div>
                     <%= f.text_field :email %>
                  </div>
               </div>
               <div class="section _100">
                  <%= label_tag 'telefone' %>
                  <div>
                     <%= f.text_field :telefone %>
                  </div>
               </div>               
               <% if is_new or (@current_usuario.id == @usuario.id) %>
                  <div class="section _100">
                     <%= label_tag 'Senha' %>
                     <div>
                         <%= f.password_field :password %>
                     </div>
                  </div>
                  <div class="section _100">
                     <%= label_tag 'password_confirmation', 'Confirmação de Senha' %>
                     <div>
                        <%= f.password_field :password_confirmation %>
                     </div>
                  </div>
               <% end %>
            </div>
            <div class="actions">
               <div class="actions-right">
                  <%= submit_tag "Confirmar" %>
               </div>
            </div>
         </div>
      </div>
   <% end -%>
