
<div id="main_content">
   <h2 class="grid_12">Tipos de Chamados</h2>
   <div class="clear"></div>

   <div role="main" class="container_12" id="content-wrapper">
      <div id="main_content">
         <div style='margin: 15px '>
            <div style='float: left'>
               <%= link_to 'Novo Tipo de Chamado', new_tipo_chamado_path %>
            </div>
            <div style='float: right'>
               <%= will_paginate_custom @tipo_chamados if @tipo_chamados %>
            </div>
        </div>

        <div class="grid_12">
           <div class="box">
              <div class="header">
                  <%= image_tag( "#{$ICO1_PATH}/application-detail.png") %>
                  <h3>Tipos de Chamados</h3><span></span>
              </div>
              <div class="content" style='padding: 0'>
                 <table id="table-example" class="table" >
                    <thead>
                       <tr>
                          <th>Descricao</th>
                          <th colspan='2'> Ações  </th>
                       </tr>
                    </thead>
                 <tbody>
                    <% @tipo_chamados.each do |t| %>
                       <tr class="gradeX">
                          <td><%=h t.nome %></td>
                          <td><%= link_to image_tag("#{$ICO1_PATH}/edit-signiture.png", :title => 'Editar'), edit_tipo_chamado_path(t) %></td>
                       </tr>
                    <% end %>
                </tbody>
                </table>
             </div> <!-- End of .content -->
             <div class="clear"></div>
          </div> <!-- End of .box -->
       </div> <!-- End of .grid_12 -->
       <br/>
    </div> <!-- End of #main_content -->
    <div class="clean"></div>
  </div> <!-- End of #content-wrapper -->
</div>

