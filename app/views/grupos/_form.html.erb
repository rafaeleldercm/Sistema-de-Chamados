<% is_show = (action_name == "show") %>
   <% form_for(@grupo) do |f| %>
      <% unless @grupo.errors.blank? %>
         <div class="grid_12">
             <div class="box">
                <div class="header">
                   <img src="/img/icons/packs/fugue/16x16/cross-circle.png" width="16" height="16">
                   <h3>Não foi possível gravar grupo.</h3>
                  <span></span>
                </div>
                <div class="content">
                   <div class="alert warning no-margin top" style='margin: 0'>
                      <span class="icon"></span><span class="hide">x</span>Por favor, verifique o(s) seguinte(s) campo(s):
                   </div>
                   <% @grupo.errors.full_messages.each do |m| %>
                      <div class="alert error" style='margin: 5px; '>
                         <span class="icon"></span><span class="hide">x</span><strong>Error: </strong> <%= m %>
                      </div>
                   <% end %>
                </div> <!-- End of .content -->
             </div> <!-- End of .box -->
          </div>
      <% end %>

      <div class="grid_6">
         <div class="box">
            <div class="header">
               <img width="16" height="16" alt="" src="/img/icons/packs/fugue/16x16/ui-text-field-format.png"/>
               <h3>Dados de Grupo</h3>    <span/>
            </div>

            <div class="content with_actions">
               <div class="section _100">
                   <%= f.label :nome, 'Nome' %>
                   <div>
                       <%= f.text_field :nome, :value => (@grupo.nome), :readonly => is_show %>
                   </div>
               </div>
               <div class="section _100">
                   <%= f.label :atendente %>
                   <div>
                       <%= f.check_box :atendente, :value => (@grupo.atendente), :readonly => is_show %>
                   </div>
               </div>

               <!--div class="section _100">
                   <%#= f.label :master, 'Master' %>
                   <div>
                       <%#= f.check_box :master, :value => (@grupo.master), :readonly => is_show %>
                   </div>
               </div-->
            </div>
            <div class="actions">
               <div class="actions-right">
                  <%= f.submit "Confirmar" %>
               </div>
            </div>
         </div>
      </div>
   <% end %>
